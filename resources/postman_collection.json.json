	"item": [
		{
			"name": "1) Signup",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"me@example.com\",\n  \"master_password\": \"CorrectHorseBatteryStaple\"\n}"
				},
				"url": "http://127.0.0.1:5000/auth/signup"
			},
			"response": []
		},
		{
			"name": "1b) Verify (paste token)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://127.0.0.1:5000/auth/verify?token={{verify_token}}",
					"protocol": "http",
					"host": [
						"127",
						"0",
						"0",
						"1"
					],
					"port": "5000",
					"path": [
						"auth",
						"verify"
					],
					"query": [
						{
							"key": "token",
							"value": "{{verify_token}}"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "2) Login",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"me@example.com\",\n  \"master_password\": \"CorrectHorseBatteryStaple\"\n}"
				},
				"url": "http://127.0.0.1:5000/auth/login"
			},
			"response": []
		},
		{
			"name": "3) Register Credential",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"app_name\": \"GitHub3\",\n  \"app_login_url\": \"https://github.com/login\",\n  \"password\": \"ghp_secret\",\n  \"master_password\":\"CorrectHorseBatteryStaple\"\n}"
				},
				"url": "http://127.0.0.1:5000/vault/register"
			},
			"response": []
		},
		{
			"name": "4) List Credentials",
			"request": {
